<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Fragmentos.Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/logo_hi1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/vCaixa_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Ip"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Porta"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vCaixa_ip2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/vEdit_ip"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/vEdit_porta"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UsuÃ¡rio"/>

            <EditText
                android:id="@+id/vEdit_usuario"
                android:maxLines="1"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senha"/>

            <EditText
                android:id="@+id/vEdit_senha"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/vBtn_entrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@color/color1"
                android:text="ENTRAR"/>
            <ImageView
                android:id="@+id/vBtn_conf"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/color2"/>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</FrameLayout>