<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.DetalheItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/vImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/vText_codigo"
                android:textColor="@android:color/black"
                android:text=""
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vText_descricao"
                android:textColor="@android:color/black"
                android:text=""
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Unit.:  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/vText_unit"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="R$0,00"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/vText_ipi"
                    android:text=""
                    android:layout_marginLeft="4dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/vText_valor"
                android:textColor="@android:color/holo_red_dark"
                android:text="R$0,00"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:id="@+id/vBtn_confirmar"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_cesta"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/vBtn_mais"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:backgroundTint="@color/color2"
                            android:background="@drawable/ic_add"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/vBtn_menos"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:backgroundTint="@color/color2"
                            android:background="@drawable/ic_remove"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/vEdit_quantidade"
                        android:textSize="26sp"
                        android:text="1"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/border"
                    android:layout_margin="2dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="DISPONÍVEL: "
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/vText_disponivel"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="DATA: "
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/vText_dt_atual"
                            android:text="00/00/0000"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="FUTURO: "
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/vText_futuro"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="DATA: "
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/vText_dt_futuro"
                            android:text="00/00/0000"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="MÍNIMO: "
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/vText_minimo"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="MÚLTIPLO: "
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/vText_multiplo"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>